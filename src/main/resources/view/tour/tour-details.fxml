<AnchorPane prefHeight="634.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhtw.tourplanner.ui.controller.tour.TourDetailsController">
    <StackPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="14.0">
        <Text fx:id="viewTitle" strokeType="OUTSIDE" strokeWidth="0.0" text="Tour erstellen" textAlignment="CENTER">
            <font>
                <Font name="Arial" size="24.0" />
            </font>
        </Text>
    </StackPane>

    <WebView fx:id="mapView" layoutY="58.0" prefHeight="321.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
    <StackPane layoutY="396.0" prefHeight="238.0" prefWidth="600.0">
        <GridPane prefHeight="219.0" prefWidth="591.0">
            <!-- NAME -->
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
                <Label fx:id="nameLabel" layoutX="64.0" layoutY="19.0" text="Name" AnchorPane.rightAnchor="20.0"
                       AnchorPane.topAnchor="20.0"/>
            </AnchorPane>
            <TextField fx:id="name" disable="true" prefHeight="26.0" prefWidth="337.0" GridPane.columnIndex="1"/>

            <!-- DESCRIPTION -->
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
                <Label fx:id="descriptionLabel" layoutX="29.0" layoutY="6.0" text="Beschreibung"
                       AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="16.0"/>
            </AnchorPane>
            <TextArea fx:id="description" disable="true" prefHeight="50.0" prefWidth="364.0" wrapText="true"
                      GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <!-- FROM LOCATION -->
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2">
                <Text layoutX="64.0" layoutY="31.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Transporttyp"
                      AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0"/>
            </AnchorPane>

            <!-- ACTION BUTTONS -->
            <ButtonBar prefHeight="67.0" prefWidth="337.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <buttons>
                    <AnchorPane prefHeight="49.0" prefWidth="338.0">
                        <Button fx:id="saveButton" layoutX="86.0" layoutY="12.0" mnemonicParsing="false"
                                text="Speichern"/>
                        <Button fx:id="deleteButton" layoutX="203.0" layoutY="12.0" mnemonicParsing="false"
                                text="LÃ¶schen"/>
                        <Button fx:id="editButton" layoutX="275.0" layoutY="12.0" mnemonicParsing="false"
                                text="Editieren"/>
                    </AnchorPane>
                </buttons>
            </ButtonBar>
          <ChoiceBox prefHeight="25.0" prefWidth="367.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                     GridPane.rowIndex="2"/>

            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="289.0" minWidth="10.0" prefWidth="156.0"/>
                <ColumnConstraints hgrow="NEVER" maxWidth="455.0" minWidth="10.0" prefWidth="363.0"/>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="455.0" minWidth="10.0" prefWidth="81.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
    </StackPane>
</AnchorPane>
